extends indexlayout
block selfCSSfile
    link(rel='stylesheet', href='/stylesheets/index.css')
block selfJSfile
    script(type="text/javascript",src="/javascripts/func/index.js")
    script(type="text/javascript",src="http://api.map.baidu.com/api?v=2.0&ak=KN8ipINyWjl55TErrURM3gRu")
block statusBar
    nav#topStatus.navbar.navbar-default.navbar-fixed-top(role=navigation)
        div.container
            div.row
                div#topBarLogo.col-md-1
                    img#logo(src="/images/logo.png")
                div#topBarOptions.col-md-1
                    button.btn.btn-default.btn-lg
                        span.glyphicon.glyphicon-list
                div#topBarSearch.col-md-8
                    div.input-group
                        span.input-group-addon 搜索
                        input.form-control(type="text")
                        span#searchBtn.input-group.input-group-btn
                            button.btn.btn-default
                                span.glyphicon.glyphicon-search
                div#topBarUser.col-md-2
                    button#doLoginBtn.btn.btn-default
                        span.glyphicon.glyphicon-user
                            |登陆
                    button#registerBtn.btn.btn-default
                        span.glyphicon.glyphicon-user
                            |注册
    div.bodyMask
    div#loginPanel.loginPanel
        div.sheet
            div.head
                h2 登陆
            div.body
                div.loginConnect
                    h5 使用合作网站账号登陆
                div.loginForm
                    h5 使用注册邮箱登陆
                    form.form-horizontal(role="form")
                        div.form-group
                            div.col-sm-10
                                input.form-control(type="email",placeholder="Email")
                        div.form-group
                            div.col-sm-10
                                input.form-control(type="password",placeholder="Password")
                        div.form-group
                            div.col-sm-10
                                button.btn.btn-default(type="submit") 登陆
                div.clearfix
            a.closeBtn

    div#registerPanel.loginPanel
        div.sheet
            div.head
                h2 注册
            div.body
                div.loginConnect
                    h5 使用合作网站账号注册
                div.loginForm
                    h5 使用邮箱注册
                    form.form-horizontal(role="form",action="/doRegister",onsubmit="return validateForm(this,'register');")
                        div.form-group
                            div.col-sm-10
                                input.email.form-control(type="email",name="email",placeholder="Email")
                        div.form-group
                            div.col-sm-10
                                input.password.form-control(type="password",name="password",placeholder="输入密码")
                        div.form-group
                            div.col-sm-10
                                input.password2.form-control(type="password",name="password2",placeholder="确认密码")
                        div.form-group
                            div.col-sm-10
                                button.btn.btn-default(type="submit") 注册
                div.clearfix
            a.closeBtn
block itemContent
    div.row
        div#itemContentList.col-md-12
            each item, i in itemList
                if i%4==0
                    div.row
                if i<8
                    div.col-md-3.itemContent
                        div.item
                            div.card
                                div.photo
                                    img(src="#{itemList[i].fishings[0].photoUrl}")
                                    p.abstract
                                        |#{itemList[i].fishings[0].abstract}
                                div.des
                                    div.fishtool
                                        h4 鱼竿
                                        p #{itemList[i].fishings[0].fishTools.fishingRod}
                                    div.fishtool
                                        h4 鱼饵
                                        p #{itemList[i].fishings[0].fishTools.bait}
                                    div.fishtool
                                        h4 鱼钩
                                        p #{itemList[i].fishings[0].fishTools.fishhook}
                        div.itemInfo
                            div.userInfo
                                a(href="javascript:void(0)")
                                    img.avatar(src="/images/header.jpg")
                                div.userName #{itemList[i].username}
                            div.mapBtn
                               button.btn.btn-default
                                    span.glyphicon.glyphicon-globe 查看地图
script(type="text/javascript")
    var map = new BMap.Map("bdMap");            // 创建Map实例
    var point = new BMap.Point(116.404, 39.915); // 创建点坐标
    map.centerAndZoom(point,15);                 // 初始化地图,设置中心点坐标和地图级别。
    map.enableScrollWheelZoom();                 //启用滚轮放大缩小

