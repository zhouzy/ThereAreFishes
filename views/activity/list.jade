extends ../layout/layout
append resources
    link(rel='stylesheet', href='/stylesheets/activity.css')
    script(type="text/javascript",src="/javascripts/func/activity.js")
block content
    ul.container.activity-list
        each activity in list
            li
                div.activity
                    div.maozi
                    div.owner
                        img(src="/images/header.jpg")
                    div.inner
                        div.inner-head
                            span.activity-name #{activity.name}
                            span.activity-time #{activity.time}
                            span.activity-address #{activity.address}
                        div.inner-body.activity-remark 备注：#{activity.remark}
                        div.inner-foot
                            span.btn 报名
